<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Accelerometer section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accelerometer"
        android:textStyle="bold"
        android:textSize="20sp" />
    
    <TextView
        android:id="@+id/x_acc_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xAcc: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/y_acc_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="yAcc: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/z_acc_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="zAcc: "
        android:textSize="18sp" />

    <!-- Gyroscope section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gyroscope"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/x_gyro_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xGyro: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/y_gyro_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="yGyro: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/z_gyro_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="zGyro: "
        android:textSize="18sp" />

    <!-- Magnetometer section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Magnetometer"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/x_mag_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xMag: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/y_mag_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="yMag: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/z_mag_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="zMag: "
        android:textSize="18sp" />
    
    <Button
        android:id="@+id/sendToServerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND TO SERVER"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="113dp" />

</LinearLayout>